<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/top_bar_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <LinearLayout
                android:id="@+id/course_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/course1"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:gravity="center"
                    android:text="1" />

                <TextView
                    android:id="@+id/course2"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:gravity="center"
                    android:text="2" />

                <TextView
                    android:id="@+id/course3"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:gravity="center"
                    android:text="3" />

                <TextView
                    android:id="@+id/course4"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:gravity="center"
                    android:text="4" />

                <TextView
                    android:id="@+id/course5"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:gravity="center"
                    android:text="5" />

                <TextView
                    android:id="@+id/course6"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:gravity="center"
                    android:text="6" />

                <TextView
                    android:id="@+id/course7"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:gravity="center"
                    android:text="7" />

                <TextView
                    android:id="@+id/course8"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:gravity="center"
                    android:text="8" />

                <TextView
                    android:id="@+id/course9"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:gravity="center"
                    android:text="9" />

                <TextView
                    android:id="@+id/course10"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:gravity="center"
                    android:text="10" />

                <TextView
                    android:id="@+id/course11"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:gravity="center"
                    android:text="11" />

            </LinearLayout>

        </LinearLayout>

        <com.wangjin.courseline.View.MHorizontalScrollView
            android:id="@+id/mhsv"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/week_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/week1"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="星期一" />

                    <TextView
                        android:id="@+id/week2"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="星期二" />

                    <TextView
                        android:id="@+id/week3"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="星期三" />

                    <TextView
                        android:id="@+id/week4"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="星期四" />

                    <TextView
                        android:id="@+id/week5"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="星期五" />

                    <TextView
                        android:id="@+id/week6"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="星期六" />

                    <TextView
                        android:id="@+id/week7"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="星期日" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/course_panels"
                    android:layout_width="wrap_content"
                    android:layout_height="825dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/course_panel1"
                        android:layout_width="100dp"
                        android:layout_height="match_parent">

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/course_panel2"
                        android:layout_width="100dp"
                        android:layout_height="match_parent">

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/course_panel3"
                        android:layout_width="100dp"
                        android:layout_height="match_parent">

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/course_panel4"
                        android:layout_width="100dp"
                        android:layout_height="match_parent">

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/course_panel5"
                        android:layout_width="100dp"
                        android:layout_height="match_parent">

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/course_panel6"
                        android:layout_width="100dp"
                        android:layout_height="match_parent">

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/course_panel7"
                        android:layout_width="100dp"
                        android:layout_height="match_parent">

                    </FrameLayout>

                </LinearLayout>


            </LinearLayout>
        </com.wangjin.courseline.View.MHorizontalScrollView>
    </LinearLayout>
</LinearLayout>